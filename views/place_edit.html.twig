<h1>Update {{place.getName}}</h1>

<form action="/place_edit/{{place.getId}}" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Rename your place:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>

<form action="/place_edit/{{place.getId}}" method="post">
    <input type="hidden" name="_method" value="delete">
    <button type="submit" name="button">Delete this place</button>
</form>
